<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_main_1_3"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tty"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="164dp"
            android:layout_height="41dp"
            android:layout_marginEnd="@dimen/card_title_margin"
            android:layout_marginStart="@dimen/card_title_margin"
            android:layout_marginTop="@dimen/card_title_margin"
            android:text="Storage"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/storage_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tty"
            android:layout_marginEnd="@dimen/card_subtitle_margin"
            android:layout_marginStart="@dimen/card_subtitle_margin"
            android:layout_marginTop="@dimen/card_button_margin"
            android:text="subtitle"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/storage_rem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/storage_used"
            android:layout_marginEnd="@dimen/card_subtitle_margin"
            android:layout_marginStart="@dimen/card_subtitle_margin"
            android:layout_marginTop="@dimen/card_button_margin"
            android:text="details"
            android:textColor="@color/black" />

        <View
            android:id="@+id/jgjg"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/storage_rem"
            android:layout_marginTop="@dimen/card_title_margin"
            android:background="#fff" />

        <RelativeLayout
            android:id="@+id/j"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/jgjg"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/card_title_margin"
            android:paddingStart="@dimen/card_title_margin"
            android:textAlignment="center">


            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="221dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/Storage_perc"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:backgroundTint="#30A7CD"
                android:progress="30" />

            <TextView
                android:id="@+id/Storage_perc"
                android:layout_width="wrap_content"

                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:text="30%"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_card_main_3"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tty"
            android:layout_marginEnd="21dp"
            android:scaleType="fitXY"
            android:src="@drawable/database" />

    </RelativeLayout>

</android.support.v7.widget.CardView>